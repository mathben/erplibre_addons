<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="defi_aliment_view_form" model="ir.ui.view">
        <field name="name">defi_aliment_form</field>
        <field name="model">defi.aliment</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="prix" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="defi_aliment_view_graph" model="ir.ui.view">
        <field name="name">defi_aliment_graph</field>
        <field name="model">defi.aliment</field>
        <field name="arch" type="xml">
            <graph string="Defi aliment">
                <field name="name" type="row" />
                <field name="prix" type="measure" />
            </graph>
        </field>
    </record>

    <record id="defi_aliment_view_kanban" model="ir.ui.view">
        <field name="name">defi_aliment_kanban</field>
        <field name="model">defi.aliment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="prix" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="prix" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="defi_aliment_view_pivot" model="ir.ui.view">
        <field name="name">defi_aliment_pivot</field>
        <field name="model">defi.aliment</field>
        <field name="arch" type="xml">
            <pivot string="Defi aliment">
                <field name="name" type="row" />
                <field name="prix" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="defi_aliment_view_search" model="ir.ui.view">
        <field name="name">defi_aliment_search</field>
        <field name="model">defi.aliment</field>
        <field name="arch" type="xml">
            <search string="Defi aliment">
                <filter domain="[('name','!=',False)]" name="name" string="Nom de l'aliment" />
                <filter domain="[('prix','!=',False)]" name="prix" string="Prix de l'aliment" />
            </search>
        </field>
    </record>

    <record id="defi_aliment_view_tree" model="ir.ui.view">
        <field name="name">defi_aliment_tree</field>
        <field name="model">defi.aliment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="prix" />
            </tree>
        </field>
    </record>

    <act_window
        id="defi_aliment_aliment_action_window"
        name="Aliment"
        res_model="defi.aliment"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
