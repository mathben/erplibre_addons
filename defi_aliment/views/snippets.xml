<odoo>
    <!-- Snippets -->
    <template id="s_defi_aliment" name="Defi Aliment">
        <section class="o_defi_aliment oe_snippet_body">
            <div class="container" />
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_structure" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="defi_aliment.s_defi_aliment" t-thumbnail="/defi_aliment/static/description/icon.png" />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/defi_aliment/static/src/scss/defi_aliment.scss" />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/defi_aliment/static/src/js/website.defi_aliment.animation.js" />
        </xpath>
    </template>
</odoo>
